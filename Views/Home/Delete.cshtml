@model Employee

@{

    ViewBag.Title = "Delete Employee";
}

<!--Delete Confirmation-->
<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-4  mb-3 ">
        <h2>Delete Details</h2>
    </div>
    <h5>Are you sure you want to delete?</h5>
    <hr />
    <div class="list-group-item ">Details</div>
    <ul class="list-group">
        <li class="list-group-item ">
            <div class="container" style="max-width:100%">
                <div class="row">
                    <div class=" col-md-2">
                        <img src="~/images/image1.jpg" class="img-thumbnail" alt="Responsive Image" width="100" height="100">
                    </div>
                    <div class=" col-md-10">
                        <div class="candidateName">
                            <b>@Html.DisplayFor(model => model.Name)</b>
                        </div><br />
                        <div class="row">
                            <div class="col-md-4">
                                <label>Email</label><br />
                                <label>Department</label><br />
                            </div>
                            <div class="col-md-6">
                                <label> @Html.DisplayFor(model => model.Email)</label><br />
                                <label>@Html.DisplayFor(model => model.Department)</label><br />
                            </div>
                        </div>
                        <form asp-controller="Candidate" asp-action="Delete" method="post">
                            <input type="submit" value="Delete" class="btn btn-danger" id="addemp" />
                            <a asp-action="Index" class="btn btn-info">Back</a>
                        </form>
                    </div>
                </div>
            </div>
        </li>
    </ul>
</div>